@model CG.Web.Models.BindingModel.TagBindingModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @using (Html.BeginForm("Create", "Tags", FormMethod.Post, new{@class="form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.LabelFor(x=>x.Title, new {@class="label label-info"})
            <br/>
            @Html.EditorFor(x=>x.Title, new {@class="form-control"})
    <br />
    <br />
            <input type="submit" value="Create" class="btn btn-primary"/>
        }
    </div>
</div>
